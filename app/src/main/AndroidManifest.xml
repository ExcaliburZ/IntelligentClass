<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wings.intelligentclass">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register">
        </activity>
        <activity
            android:name=".ClassManagerActivity"
            android:label="@string/title_activity_class_manager"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".AddClassActivity"
            android:parentActivityName=".ClassManagerActivity">
        </activity>
        <activity
            android:name=".ClassDetailActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ClassManagerActivity">
        </activity>
        <activity
            android:name=".StudentsListActivity"
            android:parentActivityName=".ClassDetailActivity">
        </activity>
        <activity
            android:name=".CheckInResultActivity"
            android:parentActivityName=".ClassDetailActivity">
        </activity>
        <activity
            android:name=".UploadDocActivity"
            android:label="@string/title_upload_doc"
            android:parentActivityName=".ClassDetailActivity">
        </activity>
        <activity
            android:name=".MyClassActivity"
            android:label="@string/title_activity_my_class"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".StudentOperationActivity"
            android:label="@string/title_student_operation"
            android:launchMode="singleTop"
            android:parentActivityName=".MyClassActivity">
        </activity>
        <activity
            android:name=".DocManagerActivity"
            android:label="@string/title_doc_manager"
            android:parentActivityName=".ClassDetailActivity">
        </activity>
        <activity
            android:name=".MyCheckInActivity"
            android:label="@string/title_my_check_in"
            android:parentActivityName=".StudentOperationActivity">
        </activity>
        <activity
            android:name=".DownloadDocActivity"
            android:label="@string/title_download_doc"
            android:parentActivityName=".StudentOperationActivity">
        </activity>
        <activity
            android:name=".SearchClassActivity"
            android:label="@string/search_class"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".CczuActivity"
            android:label="@string/cczu"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".LibActivity"
            android:label="@string/mobile_lib"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".InfoActivity"
            android:label="@string/info"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".AnswerQueListActivity"
            android:label="@string/question_list"
            android:launchMode="singleTop"
            android:parentActivityName=".StudentOperationActivity">
        </activity>
        <activity
            android:name=".QuestionDetailActivity"
            android:label="@string/answer_question"
            android:parentActivityName=".AnswerQueListActivity">
        </activity>
        <activity
            android:name=".TeacherQueListActivity"
            android:label="@string/question_list"
            android:launchMode="singleTop"
            android:parentActivityName=".ClassDetailActivity">
        </activity>
        <activity
            android:name=".StudentAnswerListActivity"
            android:label="@string/student_answer"
            android:parentActivityName=".TeacherQueListActivity">
        </activity>

    </application>

</manifest>