<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.wings.intelligentclass">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login">
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register">
        </activity>
        <activity
            android:name=".ClassManagerActivity"
            android:label="@string/title_activity_class_manager"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".AddClassActivity"
            android:parentActivityName=".ClassManagerActivity">
        </activity>
        <activity
            android:name=".ClassDetailActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".ClassManagerActivity">
        </activity>
        <activity
            android:name=".StudentsListActivity"
            android:parentActivityName=".ClassDetailActivity">
        </activity>
        <activity
            android:name=".CheckInResultActivity"
            android:parentActivityName=".ClassDetailActivity">
        </activity>
        <activity
            android:name=".UploadDocActivity"
            android:label="@string/title_upload_doc"
            android:parentActivityName=".ClassDetailActivity">
        </activity>
        <activity
            android:name=".MyClassActivity"
            android:label="@string/title_activity_my_class"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity
            android:name=".StudentOperationActivity"
            android:label="@string/title_student_operation"
            android:launchMode="singleTop"
            android:parentActivityName=".MyClassActivity">
        </activity>
        <activity
            android:name=".DocManagerActivity"
            android:label="@string/title_doc_manager"
            android:parentActivityName=".ClassDetailActivity">
        </activity>
        <activity
            android:name=".MyCheckInActivity"
            android:label="@string/title_my_check_in"
            android:parentActivityName=".StudentOperationActivity">
        </activity>
    </application>

</manifest>